<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PoliceInfo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_blue</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">@android:color/white</item>-->
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>


    <style name="SplashTheme" parent="Theme.PoliceInfo">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="mine_user_title_color">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mine_user_title_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="mine_user_value_color">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mine_user_value_color</item>
    </style>

</resources>