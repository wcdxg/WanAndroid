<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <Button
        android:id="@+id/startService"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/main_blue"
        android:gravity="center"
        android:text="开启服务"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stopService"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@color/main_blue"
        android:gravity="center"
        android:text="停止服务"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/startService"
        app:layout_constraintTop_toBottomOf="@+id/startService" />

    <Button
        android:id="@+id/bindService"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@color/main_blue"
        android:gravity="center"
        android:text="bind服务"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/stopService"
        app:layout_constraintTop_toBottomOf="@+id/stopService" />

    <Button
        android:id="@+id/unbindService"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@color/main_blue"
        android:gravity="center"
        android:text="unbind服务"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/bindService"
        app:layout_constraintTop_toBottomOf="@+id/bindService" />
</androidx.constraintlayout.widget.ConstraintLayout>